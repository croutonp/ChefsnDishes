
@{
    ViewData["Title"] = "Chefs";
}

@model List<Chef> 

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1 class="display-4">Chefs</h1>
        </div>

        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Age</th>
                        <th scope="col"># of Dishes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Chef c in Model)
                    {
                        <tr>
                            <td>@c.FirstName @c.LastName</td>
                            <td>@c.Age</td>
                            <td>@c.Dishes.Count</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>